<link type="text/css" rel="stylesheet" href="~/css/Login.css" />
<div class="container-fluid">
    <div class="row" style="height:100vh">
        <div class="col-md-6 left-section d-none d-md-flex text-center">
            <img src="~/VTS.png" alt="Logo" class="img-fluid left-logo" style="max-width: 400px;">
        </div>

        <div class="col-md-6 right-section">
            <div class="right-logo">
                <img src="~/VTS.png" alt="Logo" style="width: 60px;">
            </div>

            <div class="form-container">
                <div class="text-center mb-4">
                    <h3>Login</h3>
                </div>

                <form method="post" asp-action="Index">
                    <div class="mb-3 form-control-icon">
                        <input name="UserId" id="UserId" type="text" class="form-control" placeholder="Username" required>
                        <i class="fas fa-user"></i>
                    </div>

                    <div class="mb-3 form-control-icon">
                        <input name="Password" id="Password" type="password" class="form-control" placeholder="Password" required>
                        <i class="fas fa-lock"></i>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-primary btn-login">Login</button>
                        <a href="#" class="text-primary forgot-link">Forgot Password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>